    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="thomas_vehicle_view_form">
      <field name="name">thomas.vehicle.form</field>
      <field name="model">fleet.vehicle</field>
      <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"></field>
      <field name="arch" type="xml">
          <xpath expr="//label[@for='model_id']" position="before">
             <label for="unit_no" class="oe_edit_only"/>
            <h1>
            <field name="unit_no" string="Unit #"></field>
            </h1>
             <label for="vin_id" class="oe_edit_only"/>
            <h1>
            <field name="vin_id" string="VIN"></field>
            </h1>
          </xpath>
      </field>
    </record>

